<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5">

    <FrameLayout
        android:elevation="5dp"
        android:background="@drawable/main_toolbar"
        android:layout_width="match_parent"
        android:layout_height="70dp">
        <ImageView
            android:padding="10dp"
            android:id="@+id/car_details_img_return"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/img_return"
            android:layout_marginTop="27dp"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:textColor="@color/white"
            android:textSize="18sp"
            android:text="车辆详情"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"/>
        <ImageView
            android:padding="10dp"
            android:id="@+id/car_details_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/img_discard"
            android:layout_gravity="center|right"
            android:layout_marginRight="10dp"
            android:layout_marginTop="12dp"/>
    </FrameLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/car_details_background"
        android:layout_marginTop="150dp"
        android:orientation="vertical">

        <FrameLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginTop="20dp"
               android:layout_marginLeft="40dp"
               android:text="序列号:"
               android:textSize="17dp"
               android:textColor="#000000"/>
           <EditText
               android:id="@+id/car_details_sequence"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginLeft="102dp"
               android:layout_marginTop="19dp"
               android:background="@null"/>
       </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="40dp"
                android:text="车架号:"
                android:textSize="17dp"
                android:textColor="#000000"/>
            <EditText
                android:id="@+id/car_details_frame"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="102dp"
                android:layout_marginTop="19dp"
                android:background="@null"/>
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="40dp"
                android:text="车牌号:"
                android:textSize="17dp"
                android:textColor="#000000"/>
            <EditText
                android:id="@+id/car_details_licence"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="102dp"
                android:layout_marginTop="19dp"
                android:background="@null"/>
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="40dp"
                android:text="车辆品牌:"
                android:textSize="17dp"
                android:textColor="#000000"/>
            <EditText
                android:id="@+id/car_details_brand"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="118dp"
                android:layout_marginTop="19dp"
                android:background="@null"/>
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="40dp"
                android:text="车辆颜色:"
                android:textSize="17dp"
                android:textColor="#000000"/>
            <EditText
                android:id="@+id/car_details_colour"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="118dp"
                android:layout_marginTop="19dp"
                android:background="@null"/>
        </FrameLayout>

    </LinearLayout>

    <Button
        android:id="@+id/car_details_binding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/img_button"
        android:layout_marginTop="480dp"
        android:layout_marginLeft="48dp"
        android:layout_marginRight="48dp"
        android:text="修改"
        android:textColor="#ffffff"/>
</FrameLayout>