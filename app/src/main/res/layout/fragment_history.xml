<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/activity_rootview"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5">
    <FrameLayout
        android:elevation="5dp"
        android:background="@drawable/main_toolbar"
        android:layout_width="match_parent"
        android:layout_height="70dp">
        <ImageView
            android:padding="10dp"
            android:id="@+id/history_img_return"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/img_return"
            android:layout_marginTop="27dp"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:textColor="@color/white"
            android:textSize="18sp"
            android:text="历史轨迹"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"/>
        <ImageView
            android:padding="10dp"
            android:id="@+id/history_car"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/real_time_car"
            android:layout_gravity="center|right"
            android:layout_marginRight="10dp"
            android:layout_marginTop="12dp"/>
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="70dp">
        <com.amap.api.maps.TextureMapView
            android:id="@+id/history_map"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="#FFFFFF">
            <TextView
                android:id="@+id/history_date"
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30dp"
                android:text="请选择要查看的轨迹的日期"
                android:layout_gravity="center|left"
                android:textSize="13dp" />
            <View
                android:layout_width="1dp"
                android:layout_height="25dp"
                android:background="#6e6e6e"
                android:layout_gravity="center"
                android:layout_marginLeft="70dp" />
            <TextView
                android:id="@+id/history_query"
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="查询"
                android:layout_gravity="center|right"
                android:textSize="13dp"
                android:layout_marginRight="40dp"/>
        </FrameLayout>
    </FrameLayout>
</RelativeLayout>