<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:elevation="5dp"
        android:background="@drawable/main_toolbar"
        android:layout_width="match_parent"
        android:layout_height="70dp">
        <TextView
            android:textColor="@color/white"
            android:textSize="18sp"
            android:text="车辆生活"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"/>
        <ImageView
            android:padding="10dp"
            android:id="@+id/main_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/main_share"
            android:layout_gravity="center|right"
            android:layout_marginRight="10dp"
            android:layout_marginTop="12dp"/>
    </FrameLayout>

    <com.youth.banner.Banner
        android:id="@+id/home_page_banner"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginTop="70dp">
    </com.youth.banner.Banner>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="300dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/home_page_monitor"
            android:clickable="true"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:clickable="false"
                android:src="@drawable/home_page_monitor" />
            <TextView
                android:layout_marginTop="2dp"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="实时监控"
                android:textColor="#000000" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/home_page_navigation"
            android:clickable="true"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:clickable="false"
                android:src="@drawable/home_page_navigation" />
            <TextView
                android:layout_marginTop="2dp"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="地图导航"
                android:textColor="#000000" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/home_page_enclosure"
            android:clickable="true"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:clickable="false"
                android:src="@drawable/home_page_enclosure" />
            <TextView
                android:layout_marginTop="2dp"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="电子围栏"
                android:textColor="#000000" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/home_page_record"
            android:clickable="true"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:clickable="false"
                android:layout_marginTop="3dp"
                android:src="@drawable/home_page_record" />
            <TextView
                android:layout_marginTop="5dp"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="个人中心"
                android:textColor="#000000" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="370dp"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/home_page_condition"
            android:clickable="true"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:clickable="false"
                android:src="@drawable/home_page_condition" />
            <TextView
                android:layout_marginTop="2dp"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="实时车况"
                android:textColor="#000000" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/home_page_behavior"
            android:clickable="true"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:clickable="false"
                android:src="@drawable/home_page_behavior" />
            <TextView
                android:layout_marginTop="2dp"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="驾驶行为"
                android:textColor="#000000" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/home_page_consumption"
            android:clickable="true"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:clickable="false"
                android:src="@drawable/home_page_consumption" />
            <TextView
                android:layout_marginTop="2dp"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="油耗统计"
                android:textColor="#000000" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/home_page_drive"
            android:clickable="true"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:clickable="false"
                android:layout_marginTop="3dp"
                android:src="@drawable/home_page_drive" />
            <TextView
                android:layout_marginTop="5dp"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="驾驶评分"
                android:textColor="#000000" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="440dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/home_page_query"
            android:clickable="true"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:clickable="false"
                android:src="@drawable/home_page_query" />
            <TextView
                android:layout_marginTop="2dp"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="违章查询"
                android:textColor="#000000" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/home_page_traffic"
            android:clickable="true"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:clickable="false"
                android:src="@drawable/home_page_traffic" />
            <TextView
                android:layout_marginTop="2dp"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="路况分享"
                android:textColor="#000000" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/home_page_insurance"
            android:clickable="true"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:clickable="false"
                android:src="@drawable/home_page_insurance" />
            <TextView
                android:layout_marginTop="2dp"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="保险产品"
                android:textColor="#000000" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/home_page_more"
            android:clickable="true"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:clickable="false"
                android:layout_marginTop="3dp"
                android:src="@drawable/home_page_more" />
            <TextView
                android:layout_marginTop="5dp"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="更多功能"
                android:textColor="#000000" />
        </LinearLayout>

    </LinearLayout>

</FrameLayout>